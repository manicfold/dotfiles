export PROMPT_DIRTRIM=3

function shortPWD
{
   local Pre= Name="$PWD" Length="64";
   [[ "$Name" != "${Name#$HOME/}" || -z "${Name#$HOME}" ]] && \
      Pre+='~' Name="${Name#$HOME}" Length=$[Length-1];
   ((${#Name} > $Length)) && \
      Name="/...${Name:$[${#Name}-Length+4]}";
   echo "$Pre$Name"
}

function exitCode
{
   local Res=$?
   local Green="\e[0;32m"
   local Red="\e[0;31m"

   if [[ $Res == 0 ]]; then
      echo -e "${Green}$Res"
   else
      echo -e "${Red}$Res"
   fi
}

function projectName
{
   [[ -n "${_SOFTWARE_VERSION}" ]] && \
      printf "%*s" $(($COLUMNS-5)) "${_SOFTWARE_VERSION}"
}

function myprompt()
{
   local Purple="\[\e[0;35m\]"
   local BoldBlue="\[\e[1;34m\]"
   local Cyan="\[\e[0;36m\]"
   local Default="\[\e[0m\]"
   local BgOrange="\[\e[43m\]"
   local Black="\[\e[30m\]"

   local GitBranch=""
   if declare -F __git_ps1 &> /dev/null; then
      # GIT_PS1_SHOWDIRTYSTATE=true
      # GIT_PS1_SHOWUNTRACKEDFILES=true
      GitBranch="${Cyan}\$(__git_ps1 \" (%s)\")"
   fi
   PS1="┌─ \$(exitCode) ${Purple}\[\$(tput sc; projectName; tput rc)\]${Default}\t ${BgOrange}${Black}${HOST}${Default} ${BoldBlue}\$(shortPWD)${GitBranch}${Default}\n└> "
   PS2="─> "
}

myprompt

export GIT_PS1_SHOWDIRTYSTATE
export GIT_PS1_SHOWUNTRACKEDFILES
export PS1
export PS2
